<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/styles/estilos.alumno-detalles.css">
  <title>Alumnos Anuario</title>
</head>
<body>

  <header>
    <div class="left-section">
      <button class="btn_head"></button>
    </div>
    <div class="center-section">
      <h1>Anuario Escolar</h1>
    </div>
    <div class="right-section">
        <ul>
            <li><a href="/inicio">Inicio</a></li>
            <li><a href="/alumnos">Alumnos</a></li>
            <li><a href="/perfil">Perfil</a></li>
            <li><a href="/">Cerrar sesi칩n</a></li>
          </ul>
    </div>
  </header>
  
  <main>
    <div class="contenedor">
      <div class="alumno-detalles">
        <div class="datos-personales">
          <!-- Mostrar la informaci칩n personal del alumno -->
          <div class="card">
            <h2>Informaci칩n Personal</h2>
            <figure>
              <img src="/public/imagenes/<%=alumno.foto%>" alt="">
            </figure>
            <div class="contenido">
              <p>Nombre: <%= alumno.nombre %> <%=alumno.apellido%></p>
              <p>Correo: <%=alumno.correo%></p>
              <p>Carrera: <%=alumno.carrera%></p>
              <p>Semestre: <%=alumno.semestre%></p>
            </div>
          </div>
          <!-- ... -->
        </div>
  
        <div class="habilidades">
          <div class="card">
            <h2>Habilidades</h2>
            <div class="contenido">
              <p>Objetivo Corto: <%= habilidades.obj_corto %></p>
              <p>Objetivo Largo: <%= habilidades.obj_largo %></p>
              <p>Habilidades: <%= habilidades.habilidades %></p>
              <p>Intereses: <%= habilidades.intereses %></p>
            </div>
          </div>
        </div>
      </div>
  
      <h2>Proyectos</h2>
      <div class="proyectos">
        <% proyectos.forEach(proyecto => { %>
          <div class="card">
            <figure>
              <img src="/public/imagenes/<%=proyecto.foto%>" alt="">
            </figure>
            <div class="contenido">
              <h3><%=proyecto.titulo%></h3>
              <p><%=proyecto.descripcion%></p>
              <a href="#">Leer m치s...</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
</body>
</html>